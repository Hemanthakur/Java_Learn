import java.util.Scanner;

public class Pattern5 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		for(int r=1;r<=n;r++) 
		{
			for(int s=1;s<=n-r;s++)
			{
			System.out.print(" ");	
			}
		for(int p=1;p<=r;p++)
		{
			System.out.print("* ");
		}
			System.out.println();
		}

	}

}
